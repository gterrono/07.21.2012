<body>


  <div class="modal hide fade in" id="myModal">
    <%= render 'modal_form' %>
  </div>
  

<div id="body-div">

  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
	<ul class="nav">
	  <li class="active"><a href="#">Home</a></li>
	</ul>
      </div>
    </div>
  </div>

  <div id="newsfeed">
    <h2 id="newsfeed-title"> Newsfeed </h2>


    <% @check_ins.each do |check_in| %>
    <div class="newsfeed-item">
      <div id="table-div">
	<table class="table">
	  <tr>
	    <td><%= check_in.user.name %> is at <%= check_in.place.name %></td>
	  </tr>
	  <tr>
	    <td><%= check_in.time_staying %> mins</td>
	    <td>$<%= check_in.fee %></td>
	    <td><button class="btn btn-primary order-button" data-toggle="modal" onClick="javascript:order_up(<%= check_in.id %>)">OrderUp</button></td>
	  </tr>
	</table>
      </div>
    </div>
    <% end %>
  </div>

  <div id="crazy-map">
  </div>
</div>
</body>

<script type="text/javascript">
data = []
<% @check_ins.each do |check_in| %>
data.push({
 id: <%= check_in.id %>,
 place_id: "<%= check_in.place.place_id %>",
 name: "<%= check_in.place.name %>",
 lat: <%= check_in.place.lat %>,
 lon: <%= check_in.place.long %>,
 time_staying: <%= check_in.time_staying %>,
 user: "<%= check_in.user.name %>",
 fee: <%= check_in.fee %>
});
<% end %>
user_id=1;
</script>




